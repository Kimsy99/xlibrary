<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.profile.ViewProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingLeft="16dp"
        android:paddingBottom="24dp"
        android:background="@color/dark_blue"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Your Profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/account_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car1"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

                    <TextView
                        android:id="@+id/profile_username_label"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Username"
                        android:textColor="@android:color/darker_gray" android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:text="Kim"
                        android:textSize="21sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_height="1dp"
            android:background="#f3f3f3"/>
        <TextView
            android:id="@+id/profile_email_label"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Email Address"
            android:textColor="@android:color/darker_gray" android:textSize="14sp"/>
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:text="Kim"
            android:textSize="21sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_height="1dp"
            android:background="#f3f3f3"/>
        <TextView
            android:id="@+id/profile_uid_label"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="User ID"
            android:textColor="@android:color/darker_gray" android:textSize="14sp"/>
        <TextView
            android:id="@+id/profile_uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:text="Kim"
            android:textSize="21sp"/>


    </LinearLayout>
</ScrollView>