<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:id="@+id/book_card_preview_view"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="200dp"
            app:cardCornerRadius="22dp"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/card_book_preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/car1"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/book_preview_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Be the best software Engineer"
            android:textSize="18dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_preview_category"
            android:text="Friction"
            android:textSize="15dp"
            android:textStyle="bold" />



