<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="24dp"
                app:cardElevation="0dp">
            <ImageView
                android:id="@+id/account_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/car1"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/account_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/account_billing_address_title"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="user ID"
                android:textColor="@color/mid_blue" android:textSize="14sp"/>
            <TextView
                android:id="@+id/account_billing_address"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:text="No.12345"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/account_email_title"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="EMAIL: "
                android:textColor="@color/mid_blue"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/account_email"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:text="johndoe@example.com" android:textSize="14sp"/>

            <TextView
                android:id="@+id/account_phone_title"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="PHONE NUMBER: "
                android:textColor="@color/mid_blue"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/account_phone"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:text="012-3456789" android:textSize="14sp"/>

            <RelativeLayout
                android:id="@+id/change_billing_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/account_change_billing_address"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_account_icon" android:drawablePadding="16dp"
                    android:drawableTint="@color/mid_blue"
                    android:paddingStart="24dp" android:paddingEnd="24dp" android:paddingTop="16dp" android:paddingBottom="16dp"
                    android:text="Edit Information" android:textSize="18sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/account_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_book_icon"
                    android:drawablePadding="16dp" android:drawableTint="@color/mid_blue"
                    android:paddingStart="24dp" android:paddingEnd="24dp"
                    android:paddingTop="16dp" android:paddingBottom="16dp" android:text="Change Password"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/account_log_out"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_account_icon"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/mid_blue"
                    android:paddingStart="24dp" android:paddingEnd="24dp" android:paddingTop="16dp" android:paddingBottom="16dp"
                    android:text="Logout" android:textSize="18sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>